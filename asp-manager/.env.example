# ASP Manager Environment Variables
# Copy this file to .env and configure your environment

# API Configuration
REACT_APP_FILE_API_PORT=3008
REACT_APP_PORT=3007
REACT_APP_API_BASE_URL=http://localhost:3008
REACT_APP_PROXY=http://localhost:3008
REACT_APP_CORS_ORIGINS=http://localhost:3007,http://localhost:3000

# File System Configuration
REACT_APP_MANUALS_BASE_DIR=/data/asp-manuals
REACT_APP_OUTPUT_DIR=/data

# UI Configuration
REACT_APP_SIDEBAR_WIDTH=256
REACT_APP_CHECK_INTERVAL=100

# Search Configuration
REACT_APP_MAX_SEARCH_RESULTS=10
REACT_APP_MIN_RELEVANCE_THRESHOLD=0.1
REACT_APP_MAX_QUERY_STATS=100

# Language Configuration
REACT_APP_DEFAULT_LANGUAGE=ja
REACT_APP_SUPPORTED_LANGUAGES=ja,ko,en

# Server Configuration (for backend)
FILE_API_PORT=3008
MANUALS_BASE_DIR=/data/asp-manuals
OUTPUT_DIR=/data
NODE_ENV=development