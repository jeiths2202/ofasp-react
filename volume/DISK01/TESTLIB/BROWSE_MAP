*PROCESSING LOGIC HOOKS
LOGIC NAME=LOAD-DATA TRIGGER=INIT
LOGIC NAME=DISPLAY-PAGE TRIGGER=REFRESH
LOGIC NAME=PROCESS-F1 TRIGGER=KEY-F1
LOGIC NAME=PROCESS-F2 TRIGGER=KEY-F2  
LOGIC NAME=PROCESS-F3 TRIGGER=KEY-F3
LOGIC NAME=VALIDATE-INPUT TRIGGER=INPUT
LOGIC NAME=UPDATE-STATUS TRIGGER=STATUS-CHANGE

*CHARACTER ENCODING SPECIFICATIONS
ENCODING SOURCE=SJIS TARGET=EBCDIC FIELDS=EMP-NAME,EMP-DEPT,EMP-STATUS
ENCODING SOURCE=ASCII TARGET=EBCDIC FIELDS=EMP-ID,EMP-SALARY,EMP-HIRE-DATE

*DISPLAY FORMATTING RULES
FORMAT FIELD=EMP-SALARY MASK="¥9,999,999" ALIGN=RIGHT
FORMAT FIELD=EMP-HIRE-DATE MASK="YYYY-MM-DD" 
FORMAT FIELD=EMP-NAME WIDTH=20 TRUNCATE=YES ELLIPSIS="..."
FORMAT FIELD=EMP-DEPT WIDTH=10 TRUNCATE=YES

*ERROR HANDLING
ERROR CODE=001 MESSAGE="データファイルが見つかりません / Data file not found" ENCODING=SJIS
ERROR CODE=002 MESSAGE="ページ範囲外です / Page out of range" ENCODING=SJIS  
ERROR CODE=003 MESSAGE="無効なコマンドです / Invalid command" ENCODING=SJIS
ERROR CODE=004 MESSAGE="システムエラー / System error" ENCODING=SJIS

*PERFORMANCE OPTIMIZATION
CACHE FIELD_DATA=YES CACHE_SIZE=1000
PREFETCH NEXT_PAGE=YES BUFFER_SIZE=20
LAZY_LOAD JAPANESE_CHARS=NO

*ACCESSIBILITY FEATURES  
SCREEN_READER SUPPORT=YES
HIGH_CONTRAST MODE=AVAILABLE
FONT_SIZE ADJUSTABLE=YES

*INTERNATIONALIZATION
DEFAULT_LOCALE=ja_JP
FALLBACK_LOCALE=en_US
DATE_FORMAT LOCALE=ja_JP FORMAT="YYYY年MM月DD日"
CURRENCY_FORMAT LOCALE=ja_JP SYMBOL="¥"