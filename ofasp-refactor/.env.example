# OpenASP Refactor Environment Variables
# Copy this file to .env and configure your environment

# Application Configuration
REACT_APP_PORT=3005
REACT_APP_HOST=0.0.0.0
REACT_APP_BASE_URL=http://localhost:3005
REACT_APP_DEFAULT_LANG=ja
REACT_APP_DEFAULT_LOCALE=ja-JP

# API Configuration
REACT_APP_PDF_API_URL=http://localhost:3001
REACT_APP_FILE_SERVER_URL=http://localhost:3006
REACT_APP_PROXY_URL=http://localhost:3006

# Server Configuration
FILE_SERVER_PORT=3006
FILE_SERVER_HOST=localhost
PDF_CONVERTER_PORT=3001
PDF_CONVERTER_HOST=localhost
ASP_MANAGER_PORT=3007
ASP_MANAGER_HOST=localhost
SMED_INTERFACE_PORT=3000
SMED_INTERFACE_HOST=localhost

# File Paths
ASP_MANUALS_PATH=/data/asp-manuals
TEMP_CONVERSION_PATH=/tmp/pdf_conversion
SRC_CLLIB_PATH=/data/assets/SRC.CLLIB
SRC1_COBLIB_PATH=/data/assets/SRC1.COBLIB
DEMO_COBOL_PATH=/data/assets/DEMO/COBOL
DEMO_COPYBOOK_PATH=/data/assets/DEMO/COPYBOOK
REACT_APP_CODEPAGES_PATH=/codepages

# UI Configuration
REACT_APP_TERMINAL_DEFAULT_WIDTH=800
REACT_APP_TERMINAL_DEFAULT_HEIGHT=600
REACT_APP_TERMINAL_MIN_WIDTH=400
REACT_APP_TERMINAL_MIN_HEIGHT=300

# Animation Configuration
REACT_APP_ANIMATION_FAST=150
REACT_APP_ANIMATION_NORMAL=300
REACT_APP_ANIMATION_SLOW=1500
REACT_APP_ANIMATION_POPUP=3000
REACT_APP_ANIMATION_DELAY_SHORT=0.1s
REACT_APP_ANIMATION_DELAY_MEDIUM=0.2s

# Timeout Configuration
REACT_APP_CONVERSION_DELAY=1500
REACT_APP_ANIMATION_DELAY=300
REACT_APP_FOCUS_DELAY=100
REACT_APP_EXECUTION_DELAY=2000
REACT_APP_ASYNC_OPERATION_DELAY=1000
REACT_APP_SIDEBAR_CHECK_INTERVAL=100

# Feature Flags
REACT_APP_ENABLE_PDF_CONVERTER=true
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=false

# Application Limits
REACT_APP_HISTORY_LIMIT=9